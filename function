#include <iostream>
using namespace std;

float tambah(float a, float b) {
    return a + b;
}

float kurang(float a, float b) {
    return a - b;
}

float kali(float a, float b) {
    return a * b;
}

float bagi(float a, float b) {
    if (b == 0) {
        cout << "Error: Pembagian dengan 0!" << endl;
        return 0;
    }
    return a / b;
}

int main() {
    float a, b;
    char op;

    cout << "Masukkan angka pertama : ";
    cin >> a;
    cout << "Masukkan operator (+ - * /): ";
    cin >> op;
    cout << "Masukkan angka kedua   : ";
    cin >> b;

    switch(op) {
        case '+':
            cout << "Hasil = " << tambah(a, b);
            break;
        case '-':
            cout << "Hasil = " << kurang(a, b);
            break;
        case '*':
            cout << "Hasil = " << kali(a, b);
            break;
        case '/':
            cout << "Hasil = " << bagi(a, b);
            break;
        default:
            cout << "Operator tidak valid!";
    }

    return 0;
}
